@model IEnumerable<GarageOnWheelsMVC.Models.ViewModel.GarageViewModel>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<table class="table table-bordered table-striped" id="garageTable">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                GarageOwnerName
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.GarageOwnerName)
                </td>
                <td class="text-center">
                    @($"{item.Country.Name},{item.State.Name},{item.City.Name},{item.Area.Name},{item.Address}.")
                </td>
                <td class="text-center">
                    <a asp-action="Save" asp-controller="Garage" asp-route-id="@item.Id" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a> |

                    <a asp-action="Delete" asp-controller="Garage" asp-route-id="@item.Id" title="Delete" class="text-danger" onclick="return confirmDelete();">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        // Initialize DataTable
        $('#garageTable').DataTable();

        // Toastr notification for success message
        var message = '@TempData["Successful"]';
        if (message) {
            toastr.success(message);
        }
    });

    function confirmDelete() {
        return confirm("Are you sure to Delete?");
    }
</script>