@model IEnumerable<GarageOnWheelsMVC.Models.Order>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<style>

    table.dataTable thead th {
        background-color: #95c544;
        color: white;
    }

    .dataTables_filter {
        margin-bottom: 15px;
    }
</style>

<div class="mb-2">
    <i class="fas fa-hourglass-half" title="Pending" style="font-size: 14px; color: #f39c12;"></i> Pending &nbsp; &nbsp;
    <i class="fas fa-check-circle" title="Completed" style="font-size: 14px; color: #2ecc71;"></i> Completed
</div>

<table class="table table-bordered table-striped" id="orderTable">
    <thead>
        <tr>
            <th class="text-center">Service Details</th>
            <th class="text-center">Issue Part</th>
            <th class="text-center">Order Date</th>
            <th class="text-center">Total Amount</th>
            <th class="text-center">Status</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => order.ServiceDetails)
                </td>
                <td class="text-center">
                    <a asp-action="ViewImages" asp-controller="Order" asp-route-orderId="@order.Id" class="btn btn-info">
                        View Images
                    </a>

                </td>

                <td class="text-center">
                    @order.OrderDate.ToString("dd-MM-yyyy")
                </td>
                <td class="text-center">    
                    @order.TotalAmount.ToString("C")
                </td>
                <td class="text-center">
                    @switch (order.Status)
                    {
                        case OrderStatus.Pending:
                            <div>
                                <i class="fas fa-hourglass-half" title="Pending" style="font-size: 14px; color: #f39c12;"></i>                           
                            </div>
                            break;
                        case OrderStatus.Completed:
                            <div>
                                <i class="fas fa-check-circle" title="Completed" style="font-size: 14px; color: #2ecc71;"></i>                               
                            </div>
                            break;
                    }
                </td>

                <td class="text-center">
                    @if (order.Status == OrderStatus.Pending)
                    {

                        // remove here
                        <a href="#"
                           data-id="@order.Id"
                           data-totalamount="@order.TotalAmount"
                           data-garageid="@order.GarageId"
                           data-userid="@order.UserId"
                           data-imageUploadByCustomer="@order.ImageUploadByCustomer"
                           data-servicedetails="@order.ServiceDetails.Replace("'", "\\'")"
                           class="editLink"
                           title="Edit">
                            <i class="fas fa-edit"></i> 
                        </a>


                        <span>|</span>
                        <a asp-action="Delete" asp-controller="Order" asp-route-id="@order.Id" data-id="@order.Id" title="Delete" class="text-danger deleteLink">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-action="Delete" asp-controller="Order" asp-route-id="@order.Id" data-id="@order.Id" title="Delete" class="text-danger deleteLink">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Order ?
            </div>
            <div class="modal-footer">

                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="userIdToDelete" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm" asp-action="Edit" method="post">
                    <input type="hidden" id="orderIdToEdit" name="Id" value="" />
                    <input type="hidden" id="garageId" name="GarageId" value="" />
                    <input type="hidden" id="userId" name="UserId" value="" />
                    <input type="hidden" id="imageUploadByCustomer" name="ImageUploadByCustomer" value="" />
                    <input type="hidden" id="serviceDetails" name="ServiceDetails" value="" />
                    <div class="mb-3">
                        <label for="totalAmount" class="form-label">Total Amount</label>
                        <input type="number" class="form-control" id="totalAmount" name="TotalAmount" step="0.01" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#orderTable').DataTable({
            "pageLength": 5,
            "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
            "columnDefs": [
                { "orderable": false, "targets": [-2, -1] }
            ],
            "dom": '<"top"f>rt<"bottom"lp><"clear">'
        });

        var message = '@TempData["Successful"]';
        if (message && message !== 'null' && message !== '') {
            toastr.success(message);
        }

        // Edit link event listener
        $(document).on('click', '.editLink', function (e) {
            e.preventDefault();

            var orderId = $(this).data('id');
            var totalAmount = $(this).data('totalamount');
            var garageId = $(this).data('garageid');
            var userId = $(this).data('userid');
            var serviceDetails = $(this).data('servicedetails');

            // Set the values in the form
            document.getElementById("orderIdToEdit").value = orderId;
            document.getElementById("totalAmount").value = totalAmount;
            document.getElementById("garageId").value = garageId;
            document.getElementById("userId").value = userId;
            document.getElementById("serviceDetails").value = serviceDetails;

            // Show the modal
            var editModal = new bootstrap.Modal(document.getElementById('editModal'));
            editModal.show();
        });

        // Use event delegation for delete links
        $('#orderTable').on('click', '.deleteLink', function (e) {
            e.preventDefault();
            var userId = $(this).data('id');
            var userName = $(this).data('name');

            // Set the modal's data
            $('#deleteUserName').text(userName);
            $('#userIdToDelete').val(userId);

            // Show the modal
            $('#deleteModal').modal({
                backdrop: 'static',
                keyboard: false
            }).modal('show');
        });
    });

</script>
