@model IEnumerable<GarageOnWheelsMVC.Models.ViewModel.RevenueReportViewModel>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<style>

    table.dataTable thead th {
        background-color: #95c544;
        color: white;
    }

    .dataTables_filter {
        margin-bottom: 15px;
    }
</style>

<table class="table table-bordered table-striped" id="revenueDataTable">
        <thead>
            <tr>
                <th>Garage Name</th>
                <th>Report Date</th>
                <th>Total Revenue</th>       
            </tr>
        </thead>
        <tbody>
        @if(Model == null)
        {
            <tr>
                Record Not Found
            </tr>
        }
        else
        {
            
            @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.GarageName</td>
                        <td>@report.ReportDate.ToShortDateString()</td>
                        <td>@report.TotalRevenue</td>                
                    </tr>
                }
        }
        </tbody>
    </table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        // Initialize DataTable with 5 entries per page
        $('#revenueDataTable').DataTable({
            "pageLength": 5, 
            "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
            "dom": '<"top"f>rt<"bottom"lp><"clear">',
            "columnDefs": [
                { "orderable": false, "targets": -1 }
            ]
        });
    });
</script>
