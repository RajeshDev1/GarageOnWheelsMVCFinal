@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-4 text-primary font-weight-bold">
            @if (User.IsInRole("SuperAdmin"))
            {
                @:Super Admin Dashboard
            }
            else if (User.IsInRole("GarageOwner"))
            {
                @:Garage Owner Dashboard
            }
            else if (User.IsInRole("Customer"))
            {
                @:Customer Dashboard
            }
        </h2>
        <p class="lead">Welcome to your dashboard. Manage your profile and services with ease.</p>
    </div>

    <div class="row justify-content-center">
        @if (User.IsInRole("SuperAdmin"))
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-primary shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-users-cog fa-3x"></i></h5>
                        <p class="card-text mt-3">Manage Users</p>
                        <a href="/User/GetAllUsers" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-info shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa-solid fa-car fa-3x"></i></h5>
                        <p class="card-text mt-3">Manage Garages</p>
                        <a href="/Garage/GetAllGarages" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-success shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-file-alt fa-3x"></i></h5>
                        <p class="card-text mt-3">View Revenue Reports</p>
                        <a href="/RevenueReport/GenerateRevenue" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("GarageOwner"))
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-info shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa-solid fa-car fa-3x"></i></h5>
                        <p class="card-text mt-3">View Garages</p>
                        <a href="/Garage/GetGaragesByUserId" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-success shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-users fa-3x"></i></h5>
                        <p class="card-text mt-3">Manage Customers</p>
                        <a href="/User/GetAllCustomers" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-warning shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-tasks fa-3x"></i></h5>
                        <p class="card-text mt-3">Manage Services</p>
                        <a href="/Order/GetOrdersByGarage" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-danger shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-file-alt fa-3x"></i></h5>
                        <p class="card-text mt-3">View Revenue Report</p>
                        <a href="/RevenueReport/GenerateRevenue" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("Customer"))
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card text-white bg-primary shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-redo fa-3x"></i></h5>
                        <p class="card-text mt-3">Request Service</p>
                        <a href="/Order/Create" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card text-white bg-success shadow-lg h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fas fa-tasks fa-3x"></i></h5>
                        <p class="card-text mt-3">View Service History</p>
                        <a href="/Order/OrderHistory" class="btn btn-light btn-block mt-3">Go</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["Successful"]';
            if (message) {
                toastr.success(message);
            }
        });
    </script>
}

<style>
    .card-body {
        padding: 1.5rem;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .btn-block {
        font-size: 1.1rem;
        font-weight: bold;
    }

    .display-4 {
        font-weight: 700;
        letter-spacing: 2px;
    }

</style>
