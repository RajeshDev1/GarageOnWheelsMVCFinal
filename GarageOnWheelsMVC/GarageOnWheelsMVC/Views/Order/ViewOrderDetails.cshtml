@model GarageOnWheelsMVC.Models.ViewModel.OrderViewModel

@{
    ViewData["Title"] = "Service Details";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Order Details</h2>
    <div class="card">
        <div class="card-header">
          @*   <h4 class="mb-0">Order ID: @Model.Id</h4> *@
        </div>
        <div class="card-body">
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd-MM-yyyy")</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
            <p>
                <strong>Status:</strong>
                @switch (Model.Status)
                {
                    case OrderStatus.Pending:
                        <span class="text-warning"><i class="fas fa-hourglass-half" title="Pending"></i> Pending</span>
                        break;
                    case OrderStatus.Completed:
                        <span class="text-success"><i class="fas fa-check-circle" title="Completed"></i> Completed</span>
                        break;
                }
            </p>
        </div>
        <div class="card-footer text-center">
            <a asp-action="OrderHistory" class="btn btn-primary">Back to Orders</a>
        </div>
    </div>
</div>
