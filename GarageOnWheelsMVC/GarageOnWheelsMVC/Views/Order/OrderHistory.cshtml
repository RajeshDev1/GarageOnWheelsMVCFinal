@model GarageOnWheelsMVC.Models.ViewModel.OrderHistoryViewModel

@{
    ViewData["Title"] = "Order History";

}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div id="userTable" class="table-responsive">
        @Html.Partial("_OrderHistory", Model)

    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (var i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item @(Model.PagingInfo.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("OrderHistory", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>