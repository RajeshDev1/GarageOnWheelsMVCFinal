@{
    Layout = null;
}

<title>Garage On Wheels</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-image: url("/Images/garage.jpg");
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        color: white;
        font-family: 'Poppins', sans-serif;
        position: relative;
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding-top: 100px;
    }

    /* Navbar styles */
    .navbar {
        z-index: 2;
        width: 100%;
        background: rgba(0, 0, 0, 0.8);
        padding: 5px 10px; /* Reduced padding */
    }

    .navbar-brand {
        font-size: 1.2rem; /* Smaller font size */
        font-weight: bold;
        color: #ffffff;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);
    }

    .navbar-toggler {
        border-color: #ffffff;
    }

    .navbar-nav .nav-item .nav-link {
        color: #ffffff;
        margin-left: 8px; /* Reduced margin */
        font-size: 0.9rem; /* Smaller font size */
    }

    /* Welcome text styling */
    h1 {
        font-size: 2.5rem; /* Smaller font size */
        margin-bottom: 1rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        font-weight: 700;
        letter-spacing: 1px;
    }

    p {
        font-size: 1rem; /* Smaller font size */
        text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.7);
    }

    /* Custom button styles */
    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 0.5rem 1rem; /* Reduced padding */
        font-size: 1rem; /* Smaller font size */
        font-weight: 600;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
    }

        .btn-custom:hover {
            background-color: #0056b3;
            color: #fff;
        }

    /* Footer styling */
    .footer {
        width: 100%;
        padding: 0.5rem; /* Reduced padding */
        text-align: center;
        background-color: rgba(0, 0, 0, 0.9);
        color: #ffffff;
        font-size: 0.8rem; /* Smaller font size */
        z-index: 2;
        position: relative;
    }

        .footer a {
            color: #ffffff;
            text-decoration: underline;
        }

</style>

<header class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="#">Garage on Wheels</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="btn btn-custom nav-link" href="@Url.Action("Login", "Account")">
                        <i class="fa fa-sign-in-alt"></i> Login
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>

<main class="content">
    <section class="py-5 text-center">
        <div class="container">
            <h1>Welcome to Garage on Wheels</h1>
            <p>Your one-stop solution for all your garage needs. Reliable. Fast. Efficient.</p>
        </div>
    </section>
</main>

<footer class="footer">
    <p>&copy; 2024 Garage On Wheels. All rights reserved. <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
